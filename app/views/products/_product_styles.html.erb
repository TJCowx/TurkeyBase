<fieldset style="padding-bottom:20px;">
    <div class="input-group">
        <span class="input-group-addon">
            <strong>Selectable </strong>
            <%= f.check_box :active_style, class: 'checkbox-control'%>
        </span>
        <%= f.text_field :product_style_name, class: 'form-control', placeholder: "Product Style" %>
        <%= f.hidden_field :_destroy %>
        <span class="input-group-addon back-warning">
            <%= link_to '', '#', class:'remove_fields glyphicon glyphicon-trash  back-warning'%>
        </span>
    </div>
</fieldset>
