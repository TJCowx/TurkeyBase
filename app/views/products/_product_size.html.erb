<% @product_size.each do |x| %>
<div class="list-group-item">
    <span>
        <% if x.active_size? %>
            Selectable
        <% else %>
            Non-selectable
        <% end %>
        <%= link_to x, method: :toggle do %>
            <button type='button' class='button-style'>Toggle</button>
        <% end %>
    </span>
    |
    <%= x.product_size_name %>
    <span class="badge back-warning">
        <%= link_to "Delete", x, method: :delete,
            data: {confirm:"Do you want to delete #{x.product_size_name}"},
            class: "back-warning" %>
    </span>
</div>
<% end %>
