<fieldset style="padding-bottom: 20px;">
    <div class="input-group">
        <span class="input-group-addon">
            <strong>Selectable </strong>
            <%= f.check_box :active_size, class: 'checkbox-control'%>
        </span>
        <%= f.text_field :product_size_name, class: 'form-control', placeholder: "Product Size" %>
        <%= f.hidden_field :_destroy %>
        <span class="input-group-addon back-warning">
            <%= link_to '', '#', class:'glyphicon glyphicon-trash remove_fields back-warning'%>
        </span>
    </div>
</fieldset>
