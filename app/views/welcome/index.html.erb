<% provide(:title, "Home") %>
<% provide(:header, 'Home') %>
<center>
<!-- Manage & Add orders -->
<div class="row">
    <div class="col-sm-6 col-md-4 col-md-offset-2">
        <%= link_to new_order_path do %>
            <div class="thumbnail">
                <div class="caption">
                    <h3>Place an Order</h3>
                    <p>
                        Go here to place an order for a customer in the current
                        order season.
                    </p>
                </div>
            </div>
        <% end %>
    </div>
    <div class="col-sm-6 col-md-4">
        <%= link_to list_orders_path(current_season) do %>
            <div class="thumbnail">
                <div class="caption">
                    <h3>Manage Orders</h3>
                    <p>View and manage orders that have been placed.</p>
                    <br/>
                </div>
            </div>
        <% end %>
    </div>
</div>

<% if admin? %>
    <!-- Manage and add order seasons -->
    <div class="row">
        <div class="col-sm-6 col-md-4 col-md-offset-2">
            <%= link_to new_order_season_path do %>
                <div class="thumbnail">
                    <div class="caption">
                        <h3>Create an Order Season</h3>
                        <p>Create an order season, including name and date range.</p>
                        <br/>
                    </div>
                </div>
            <% end %>
        </div>
        <div class="col-sm-6 col-md-4">
            <%= link_to order_seasons_path do %>
                <div class="thumbnail">
                    <div class="caption">
                        <h3>Manage an Order Season</h3>
                        <p>
                            View & edit dates and products in the season,
                            or rename the order season and set the active season.
                        </p>
                    </div>
                </div>
            <% end %>
        </div>
    </div>

    <!-- Manage and add products -->
    <div class="row">
        <div class="col-sm-6 col-md-4 col-md-offset-2">
            <%= link_to new_product_path do %>
                <div class="thumbnail">
                    <div class="caption">
                        <h3>Add a Product</h3>
                        <p>Create a new product, with a style and a size.</p>
                    </div>
                </div>
            <% end %>
        </div>
        <div class="col-sm-6 col-md-4">
            <%= link_to products_path do %>
                <div class="thumbnail">
                    <div class="caption">
                        <h3>Manage Products</h3>
                        <p>View and manage products. Manage their styles and sizes.</p>
                    </div>
                </div>
            <% end %>
        </div>
    </div>

    <!-- Manage and add users -->
    <div class="row">
        <div class="col-sm-6 col-md-4 col-md-offset-2">
            <%= link_to new_user_path do %>
                <div class="thumbnail">
                    <div class="caption">
                        <h3>Add a New User</h3>
                        <p>Create a new user, both login user or a sales employee.</p>
                    </div>
                </div>
            <% end %>
        </div>
        <div class="col-sm-6 col-md-4">
            <%= link_to users_path do %>
                <div class="thumbnail">
                    <div class="caption">
                        <h3>Manage Users</h3>
                        <p>View and manage orders all users.</p>
                    </div>
                </div>
            <% end %>
        </div>
    </div>
<%end%>
</center>
